#action {^这时就在不远处的%*，似乎有人放烟花回应，你寻思着这大约就是接头口令了。$} {
    diebao.password;
};

#action {^如果你没记错的话，接头人名唤%*。$} {
    diebao.password;
};

#alias {diebao.password} {
    #class diebao.password open;

    #var diebao-password-word  {};
    #var diebao-password-line-count {0};
    #var diebao-password-word-count {0};

    #action {^{|ID=diebao/password}$} {
        okLog -------------;
        #var diebao-password-word  {};
        #var diebao-password-line-count {0};
        #line multishot 12 #action {^%+12*    {|ID=diebao/password}$} {
            #line gag;
            #cat diebao-password-word {|%%%0|};
            #if { $diebao-password-line-count == 0 } {
                math.Inc diebao-password-word-count;
            };
            math.Inc diebao-password-line-count;
            #if { $diebao-password-line-count == 12 } {
                hzk12.Beautify {$diebao-password-word};
                okLog -------------;
                #if { $diebao-password-word-count == 3 } {
                    #class diebao.password kill;
                };
            };
        };
    };

    #delay diebao-password-timeout {
        #class diebao.password kill;
    } 8;

    #class diebao.password close;
};

load-lib hzk12;
